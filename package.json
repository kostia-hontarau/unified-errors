    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/jest": "^29",
    "@types/node": "^20.0.0",
    "typescript-eslint": "^8",
    "eslint": "^9",
    "eslint-config-prettier": "^10",
    "eslint-plugin-prettier": "^5",
    "husky": "^9",
    "jest": "^29",
    "lint-staged": "^16",
    "prettier": "^3",
    "ts-jest": "^29",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
