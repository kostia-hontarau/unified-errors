{
  "name": "unified-errors",
  "version": "1.0.0",
  "description": "A library to handle declarative error handling in Node.js",
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kostia-gontarev/unified-errors.git"
  },
  "author": "Kanstantsin Hontarau <kostia.gontarev@gmail.com>",
  "types": "build/index.d.ts",
  "bin": {
    "unified-errors": "build/cli/index.js"
  },
  "scripts": {
    "test": "jest --passWithNoTests",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "rm -rf build && tsc",
    "generate": "node build/cli/index.js generate -- -o ./errors",
