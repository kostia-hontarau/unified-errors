{
  "name": "unified-errors",
  "version": "0.0.1",
  "description": "A library to handle declarative error handling in Node Js",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "jest --passWithNoTests",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc",
    "prepare": "npm run build && npm run test"
  },
  "keywords": [
    "Node.js"
  ],
  "author": "Kanstantsin Hontarau <kostia.gontarev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "safer-eval": "^1.3"
  },
  "devDependencies": {
    "@types/jest": "^24",
    "@typescript-eslint/eslint-plugin": "4.x",
    "@typescript-eslint/parser": "4.x",
    "eslint": "^7",
    "eslint-config-prettier": "^8",
    "eslint-plugin-prettier": "^3",
    "husky": "^4",
    "jest": "^26",
    "lint-staged": "^10",
    "prettier": "^2",
    "ts-jest": "^26",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  }
}
